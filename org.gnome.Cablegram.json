{
    "app-id" : "org.gnome.Cablegram",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.28",
    "sdk" : "org.gnome.Sdk",
    "command" : "cablegram",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags" : "-O2 -g",
        "cxxflags" : "-O2 -g",
        "env" : {
            "V" : "1"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "cpython",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.python.org/ftp/python/3.6.0/Python-3.6.0.tar.xz",
                    "sha256" : "b0c5f904f685e32d9232f7bdcbece9819a892929063b6e385414ad2dd6a23622"
                }
            ]
        },
        {
            "name" : "setuptools",
            "buildsystem" : "simple",
            "build-commands" : [
                "python3 ./bootstrap.py; python3 setup.py install --prefix=/app"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/pypa/setuptools/archive/v39.0.1.tar.gz",
                    "sha256" : "0f0e9982e768b4d42764c17e157790c8039b9c76bd9df195b2df103dce1b5283"
                }
            ]
        },
        {
            "name" : "pyrogram",
            "no-autogen" : true,
            "build-commands" : [
                "python3 ./bootstrap.py"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/pyrogram/pyrogram/archive/v0.7.1.tar.gz",
                    "sha256" : "5cdfdda9b4819e6352dd290e23ff6c384d75cf8a64d0ab717f7c3fa35403b8f6"
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "echo 'all:\n\ninstall:\n\tpython3 ./bootstrap.py\n\tpython3 ./setup.py install --prefix=/app' > makefile"
                    ]
                }
            ]
        },
        {
            "name" : "cablegram",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=lib"
            ],
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/luka/Documents/Python/Cablegram"
                }
            ]
        }
    ]
}
